# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Products
GET    /products/:cat_id            controllers.ProductController.getProducts(cat_id: Int)
GET    /product/:prod_id            controllers.ProductController.getProductDataById(prod_id: Long)
POST   /addproduct                  controllers.ProductController.addProduct
POST   /deleteproduct/:id           controllers.ProductController.deleteProduct(id: Long)


# Categories
GET    /categories                  controllers.CategoryController.getCategories
GET    /categoriesWithCounters      controllers.CategoryController.getCategoriesWithCounters
POST   /addcategory                 controllers.CategoryController.addCategory


# Cart
GET    /cart                        controllers.CartController.getCartItems
POST   /addcartitem                 controllers.CartController.addCartItem
POST   /deletecartitem              controllers.CartController.deleteCartItem


# Orders
GET    /orders                      controllers.OrderController.getOrders
POST    /makeorder                  controllers.OrderController.makeOrder


# Opinions
POST   /addopinion/:product_id      controllers.OpinionController.addOpinion(product_id: Long)
GET    /opinions/:product_id        controllers.OpinionController.getOpinions(product_id: Long)

# Login
GET    /login/:provider             controllers.SocialAuthController.authenticate(provider: String)
GET    /loginResult                 controllers.SocialAuthController.loginResult
GET    /getUser                     controllers.SocialAuthController.getUserData
GET    /logout                      controllers.SocialAuthController.signOut

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
